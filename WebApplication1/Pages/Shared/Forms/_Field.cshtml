@model FormsTest.Models.Form.FormField
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string requiredAttr = Model.IsMandatory ? "required=\"required\"" : string.Empty;
    string readonlyAttr = Model.ReadOnly ? "readonly" : string.Empty;
}
<div class="form-group">
    <label for="@Model.Name">@Model.DisplayName</label>
    <input class="form-control" name="@Model.Name" type="text" value="@Model.Value" @requiredAttr @readonlyAttr />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>